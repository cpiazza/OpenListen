<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="294dip"
    android:layout_height="wrap_content"
    android:orientation="horizontal"    >

   <ImageView
   		android:layout_width="30dip"
   		android:layout_height="fill_parent"
   		android:background="@drawable/appwidget_bg_left2" />

   <LinearLayout
   	    android:layout_width="234dip"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
   		android:background="@drawable/appwidget_bg_center2">
  		
   			<LinearLayout
        		android:id="@+id/album_appwidget"
        		android:layout_width="fill_parent"
		        android:layout_height="85dip"
		        android:orientation="vertical"
		        android:gravity="center_vertical"
		        android:clickable="true"
		        android:focusable="true"
		        android:paddingTop="25dip"
		        android:paddingLeft="0dip"
		        android:paddingRight="8dip"	>

		        <TextView
        		    android:id="@+id/title"
		            android:layout_width="fill_parent"
        		    android:layout_height="wrap_content"
		            android:textColor="@drawable/darkgray"
        		    android:textStyle="bold"
		            android:textSize="18sp"
        		    android:singleLine="true"
		            android:fadingEdge="horizontal"
        		    android:fadingEdgeLength="5dip"
		            android:ellipsize="none" />

		        <TextView
            		android:id="@+id/artist"
		            android:layout_width="fill_parent"
        		    android:layout_height="wrap_content"
		            android:textColor="@drawable/darkgray"
        		    android:textSize="14sp"
		            android:singleLine="true"
        		    android:fadingEdge="horizontal"
		            android:fadingEdgeLength="5dip"
        		    android:ellipsize="none" />
    		</LinearLayout>

   			<LinearLayout
   	    		android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
    			android:gravity="center_horizontal"
    			android:paddingBottom="5dip"
    			android:orientation="horizontal" >
    			
	    		<ImageView
			        android:id="@+id/control_prev"
			        android:clickable="true"
		    	    android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
					android:gravity="center_vertical"
					android:paddingTop="10dip"        
					android:paddingRight="10dip"
        			android:src="@drawable/appwidget_prev"
	        		android:scaleType="center"       />
    			
			 	<ImageView
			        android:layout_width="2dip"
		    	    android:layout_height="fill_parent"
		        	android:background="@drawable/appwidget_divider"       />
    			    
	    		<ImageView
			        android:id="@+id/control_play"
			        android:clickable="true"
		    	    android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
					android:gravity="center_vertical"
					android:paddingTop="10dip"        
					android:paddingRight="10dip"
        			android:src="@drawable/appwidget_play"
	        		android:scaleType="center"       />

			 	<ImageView
			        android:layout_width="2dip"
		    	    android:layout_height="fill_parent"
		        	android:background="@drawable/appwidget_divider"       />
        
    			<ImageView
		    	    android:id="@+id/control_next"
		        	android:clickable="true"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
					android:gravity="center_vertical"
					android:paddingTop="10dip"
					android:paddingRight="5dip"		        
			        android:src="@drawable/appwidget_next"
		    	    android:scaleType="center"	 />
			</LinearLayout>
			
			<LinearLayout
		   	    android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
				android:paddingBottom="5dip"
    			android:orientation="horizontal"  >
   		
		   		<ImageView
			        android:id="@+id/control_reco"
			        android:layout_width="wrap_content"
			        android:layout_weight="1"
			        android:layout_height="wrap_content"
					android:gravity="center_vertical"        
			        android:src="@drawable/appwidget_reco"
			        android:clickable="true"
			        android:padding="10dip"
			        android:scaleType="center"   />
   		
			 	<ImageView
			        android:layout_width="2dip"
			        android:layout_height="fill_parent"
			        android:background="@drawable/appwidget_divider" />

			   	<ImageView
        			android:id="@+id/control_star"
			        android:layout_width="wrap_content"
			        android:layout_weight="1"
			        android:layout_height="wrap_content"
					android:gravity="center_vertical" 
					android:padding="10dip"       
			        android:src="@drawable/appwidget_star"
			        android:scaleType="center"	 />

			 	<ImageView
			        android:layout_width="2dip"
			        android:layout_height="fill_parent"
			        android:background="@drawable/appwidget_divider" />

			   	<ImageView
			        android:id="@+id/control_who"
			        android:layout_width="wrap_content"
			        android:layout_weight="1"
			        android:layout_height="wrap_content"
					android:gravity="center_vertical"        
			        android:src="@drawable/appwidget_listening"
			        android:padding="10dip"
			        android:scaleType="center" />
	
		</LinearLayout>
	</LinearLayout>
	<ImageView
   		android:layout_width="30dip"
   		android:layout_height="fill_parent"
   		android:background = "@drawable/appwidget_bg_right2"   />	
</LinearLayout>